# Server Configuration
PORT=8080
HOST=0.0.0.0
API_KEY=change_me_to_secure_api_key

# Qdrant Configuration
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=my_docs
QDRANT_VECTOR_SIZE=1536
QDRANT_DISTANCE=Cosine

# MongoDB Configuration (source of truth)
MONGO_URI=mongodb://localhost:27017
MONGO_DB=mydb
MONGO_COLLECTION=documents
MONGO_CHANGE_STREAMS_ENABLED=false
MONGO_READ_ONLY=true

# Embeddings Configuration
EMBEDDINGS_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here

# Optional: pgvector support (experimental)
PGVECTOR_ENABLED=false
DATABASE_URL=postgresql://user:password@localhost:5432/vectordb

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_MAX=60
RATE_LIMIT_WINDOW_MS=60000

# CORS Configuration
CORS_ORIGIN=*
# For n8n, use something like: http://localhost:5678,https://your-n8n-instance.com

# Google Sheets Integration
GCP_SERVICE_ACCOUNT_JSON=base64_encoded_service_account_json_here
SHEET_ID=your_google_sheets_id_here
GOOGLE_SHEETS_SYNC_ENABLED=false
GOOGLE_SHEETS_SYNC_INTERVAL_MINUTES=60
